mixin btn(...mods)

    -
        var classes = "",
            icon = ""

    each mod in mods

        //- если модификатор содержит строку "icon"
        if !mod.search("icon")
            - icon = "icon " + mod  //- формируем класс для иконки

        //- если модификатор не содержит строку "icon"
        else
            - classes += "btn--"+mod+" "  //- формируем список классов-модификаторов


    //- html
    button.btn(class=classes)&attributes(attributes)

        if icon
            span(class=icon)

        if block
            span: block



mixin a(...mods)

    -
        var classes = "",
        href = ""


    each mod in mods

        //- если модификатор содержит строку "/"
        if !mod.search("/")
            - href = mod+".html"  //- формируем href

        //- если модификатор содержит строку "tel"
        else
            - href = mod  //- формируем tel

    //- html
    a(href=href)&attributes(attributes)
        block



mixin link(...mods)

    -
        var classes = "",
            href = "",
            icon = ""

    each mod in mods

        //- если модификатор содержит строку "/"
        if !mod.search("/")
            - href = mod+".html"  //- формируем href

        //- если модификатор содержит строку "icon"
        else if !mod.search("icon")
            - icon = "icon " + mod  //- формируем класс для иконки

        //- если модификатор не содержит строку "icon"
        else
            - classes += "link--"+mod+" "  //- формируем список классов-модификаторов


    //- html
    a.link(href=href class=classes)&attributes(attributes)
        if icon
            span(class=icon)
        span: block



mixin input(...mods)

    -
        var classes = ""

    each mod in mods
        - classes += "input--"+mod+" "  //- формируем список классов-модификаторов


    //- html

    if block
        label.label
            .label_title: block
            input.input(class=classes type="text")&attributes(attributes)

    else
        input.input(class=classes type="text")&attributes(attributes)


