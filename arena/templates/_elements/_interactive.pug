mixin search
    form.search
        input(type="text" placeholder="Поиск по сайту").fluid
        +btn("icon-search")



mixin checkbox(...mods)

    each mod in mods
        - classes += "input--"+mod+" "

    //- html
    label.checkbox&attributes(attributes)
        input(type="checkbox")
        span.checkbox_icon
        span.checkbox_text: block



mixin radio(...mods)

    //- html
    label.radio
        input(type="radio")&attributes(attributes)
        span.radio_icon
        span.radio_text: block



mixin carousel(items,responsive)

    //- html
    .carousel.owl-carousel(data-items=responsive)
        - for (var i=0; i<items; i++)
            .carousel__item
                block