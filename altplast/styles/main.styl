@require "system/*"
@require "utilites/*"
@require "elements/*"
@require "components/*"

::placeholder
	color: #666

::selection
	background-color: $c-accent
	color: $c-light

body
	font-size: 24px
	font-family: "play", "sans-serif"
	min-width: 320px
	position: relative
	background: #000
	color: $c-light
	line-height: 1.5
	overflow-x: hidden


main
	overflow: hidden


.container
	transition max-width .3s

img
	max-width: 100%


ul
	list-style-type: none
	padding: 0
	margin: 0

h1
	text-transform: uppercase
	font-size: 40px
	font-weight: bold

h2
	font-size: 24px
	text-transform: uppercase

.headers
	margin-bottom: 100px


hr
	border-color: $c-dark--dark
	border-bottom-width: 2px


